# ==========================================================
# EditorConfig — global fallback for all projects
# https://editorconfig.org
# ==========================================================
root = true

# ── Defaults (all files) ───────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# ── Web / JS / TS / JSON / YAML ───────────────────────────
[*.{js,jsx,ts,tsx,json,jsonc,yaml,yml,css,scss,html,vue,svelte}]
indent_size = 2

# ── Go (uses tabs by convention) ──────────────────────────
[*.go]
indent_style = tab
indent_size = 4

# ── Makefiles (require tabs) ──────────────────────────────
[Makefile]
indent_style = tab

# ── Markdown ───────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
